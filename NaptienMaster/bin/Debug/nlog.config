<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
	  internalLogFile="${basedir}/logs/internal.log"
	  internalLogLevel="info">
	<extensions>
		<add assembly="NLog.Extended"/>
	</extensions>
	<internalLogFile path="internallog.txt" />
	<internalLogLevel>Trace</internalLogLevel>
	<targets>
		<target xsi:type="File" name="fileTarget"
				layout="${longdate}|${level:uppercase=true}|${newline} ${message} ${exception:format=ToString}${newline}"
				fileName="${basedir}/logs/log_trans.txt"
				archiveFileName="${basedir}/logs/log_transaction.{#}.txt"
				archiveAboveSize="0"
				maxArchiveFiles="2"
				archiveNumbering="DateAndSequence"
				enableFileDelete="false"
				encoding="utf-8"
				/>
	      <target xsi:type="File" name="fileConnectionTarget"
				layout="${longdate}|${level:uppercase=true}|${newline} ${message} ${exception:format=ToString}${newline}"
				fileName="${basedir}/logs/log_connection.txt"
				archiveFileName="${basedir}/logs/log_connection.{#}.txt"
				archiveAboveSize="0"
				maxArchiveFiles="2"
				archiveNumbering="DateAndSequence"
				enableFileDelete="false"
				encoding="utf-8"
				/>
	</targets>
	<rules>
		<logger name="MainLog" minlevel="Trace" writeTo="fileTarget" />
	    <logger name="ConnectionLog" minlevel="Trace" writeTo="fileConnectionTarget"/>
	</rules>
</nlog>